gem 'acts_as_commentable_with_threading'

# pretty url preview
gem 'link_thumbnailer'

# Graphql
# gem 'graphql', '1.4.2'
gem 'graphql', github: 'b8in/graphql-ruby', branch: 'fix-negative-offset'

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Use Puma as the app server
gem 'puma'
gem 'resque'
gem 'resque-scheduler'

# OpenTok for audio/video calls
