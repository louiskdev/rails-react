# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

gem 'dotenv-rails'

# Use mongodb
gem 'mongoid', '~> 5.1.0'

# Use Facebook Graph API
gem 'koala', '~> 2.2'

group :development do
  gem 'letter_opener'
  gem 'zencoder-fetcher'
  gem 'graphiql-rails'
end

